function [ b ] = b_cont( obs, pi, a, miu, sigma, c )
% b - the distribution for a continuous HMM given a set of observations

T = length(obs);
N = length(pi);
b = zeros(N, T);
M = size(c,2);
n = 2; % dimension of multivariate normal distributions
for i=1:N
    for j=1:T
        for k = 1:M
            b(i,j) = b(i,j) + c(i,k) * mult_norm(obs(j), miu(:,n*(i-1)+k), sigma);
        end
    end
end

end
